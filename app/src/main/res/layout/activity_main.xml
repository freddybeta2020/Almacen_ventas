<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvtitulo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="30dp"
        android:text="Almacen" />

    <EditText
        android:id="@+id/etunidades"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:textStyle="italic"
        android:gravity="center"
        android:textColor="@color/material_dynamic_primary60"
        android:layout_marginTop="20dp"
        android:hint="Cantidad"
        android:ems="10"
        android:inputType="numberDecimal" />
    <EditText
        android:id="@+id/etvalor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:hint="Valor del articulo"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etiva"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:hint="Valor IVA"
        android:ems="10"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvtitulo3"
            android:layout_width="49dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Valor bruto venta"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvventabruta"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvtitulo4"
            android:layout_width="49dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Valor IVA"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvvaloriva"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="0" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv"
            android:layout_width="49dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Neto a pagar"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvventaneta"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btcalcular"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="Calcular"
            android:textSize="27dp"
            android:layout_weight="1"
            android:text="Calcular" />

        <Button
            android:id="@+id/btlimpiar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="27dp"
            android:onClick="Limpiar"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Limpiar" />
    </LinearLayout>

</LinearLayout>